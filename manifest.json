{
    "manifest_version": 2,
    "name": "PubMed Search Engine",
    "description": "Adds the PubMed search engine to the search and address bars.",
    "developer": {
        "name": "TobiWan54",
        "url": "https://github.com/TobiWan54/pubmed-search-engine-firefox"
    },
    "version": "1.0",
    "chrome_settings_overrides": {
        "search_provider": {
            "name": "PubMed",
            "search_url": "https://pubmed.ncbi.nlm.nih.gov/?term={searchTerms}",
            "keyword": "pubmed",
            "favicon_url": "icons/48.png",
            "is_default": false,
            "encoding": "UTF-8"
        }
    },
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "16": "icons/16.png",
        "24": "icons/24.png",
        "32": "icons/32.png",
        "48": "icons/48.png"
    },
    "web_accessible_resources": [
        "icons/48.png"
    ]
}
